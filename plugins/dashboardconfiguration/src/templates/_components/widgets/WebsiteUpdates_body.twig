{% requireLogin %}

<div class="recententries-container">
    {% if entries is defined and entries|length %}
        <table class="fullwidth">
            {% for entry in entries %}
                <tr>
                    <td>
                        <a target="_blank" href="{{ entry.url }}">{{ entry.title }}</a>
                        <span class="light">
                            {{ entry.dateCreated|timestamp('short') }}
                            {%- if entry.getAuthor() %}, {{ entry.getAuthor().username }}{% endif -%}
                        </span>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p class="zilch small">{{ "No entries exist yet."|t('app') }}</p>
    {% endif %}
</div>
