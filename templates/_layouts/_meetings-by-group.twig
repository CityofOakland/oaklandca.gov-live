{% if slug is defined %}
  {% set entry = craft.entries().section('boardsCommissions').slug(slug).one() %}
  {% if not entry.indexToggle  %}
    {% redirect 404 %}
  {% endif %}
{% else %}
  {% redirect 404 %}
{% endif %}

{% set query          = craft.app.request.getQueryParam('q') %}
{% set meetings       = craft.entries().section('meetings').relatedTo(entry).search(query).limit(10) %}
{% set subcommittee   = craft.app.request.getQueryParam('subcommittee') %}
{% set filter_enabled = false %}

{% if subcommittee %}
  {% set filter_enabled = true %}
  {% set id = craft.entries().section('boardsCommissions').id(subcommittee).one() %}
  {% set meetings = meetings.andRelatedTo(craft.entries().section('boardsCommissions').id(id).one()) %}
  {% set subcommittee = id %}
{% endif %}

{% set date_query = ['and'] %}

{% set year   = craft.app.request.getQueryParam('year') ? craft.app.request.getQueryParam('year') : '' %}
{% set month  = craft.app.request.getQueryParam('month') ? craft.app.request.getQueryParam('month') : '' %}
{% set ymd     = '' %}

{% if year and month %}
  {% set filter_enabled = true %}
  {% set ymd = year ~ '-' ~ month ~ '-01' %}
  {% set date_query = date_query|merge(['>= ' ~ (ymd), '< ' ~ (ymd|date_modify('+1 month')|date('Y-m-d')) ]) %}
{% elseif year %}
  {% set filter_enabled = true %}
  {% set ymd = year ~ '-' ~ '01-01' %}
  {% set date_query = date_query|merge(['>= ' ~ (ymd), '< ' ~ (ymd|date_modify('+1 year')|date('Y-m-d')) ]) %}
{% elseif month %}
  {% set filter_enabled = true %}
  {% set ymd = now|date('Y') ~ '-' ~ month %}
  {% set date_query = date_query|merge(['>= ' ~ (ymd), '< ' ~ (ymd|date_modify('+1 month')|date('Y-m-d')) ]) %}
{% endif %}

{% set type = craft.app.request.getQueryParam('type') ? craft.app.request.getQueryParam('type') : 'upcoming' %}
{% if type %}
  {% switch type %}
    {% case 'upcoming' %}
      {% set meetings = meetings.order('date asc') %}
      {% set date_query = date_query|merge(['>= ' ~ now|date('Y-m-d')]) %}
    {% case 'past' %}
      {% set meetings = meetings.order('date desc') %}
      {% set date_query = date_query|merge(['< ' ~ now|date('Y-m-d')]) %}
  {% endswitch %}
{% else %}
  {% set meetings = meetings.order('date asc') %}
  {% set date_query = date_query|merge(['>= ' ~ now|date('Y-m-d')]) %}
{% endif %}

{% if date_query|length > 1 %}
  {% set meetings = meetings.date(date_query) %}
{% endif %}

{% if craft.app.request.getQueryParam('q') %}
  {% set filter_enabled = true %}
{% endif %}

{% paginate meetings as pageInfo, meetings %}

{% if pageInfo.currentPage > 1 %}
  {% set filter_enabled = true %}
{% endif %}

{% set seoTitle = entry.title ~ ' Meetings' %}

{% if pageInfo.currentPage > 1 %}
  {% set seoTitle = seoTitle ~ ' | Page ' ~ pageInfo.currentPage ~ ' of ' ~ pageInfo.totalPages %}
{% endif %}

{% do seomatic.meta.seoTitle(seoTitle) %}

{% set layout = 'filter' %}
{% extends '_content.twig' %}
{% import '_macros/_macros' as macros %}

{% block title %}
  <h1 class="my-0 text-3xl font-bold md:text-4xl">Meetings for {{ entry.title }}{% if subcommittee %} - {{ subcommittee.title }}{% endif %}</h1>
  {% if entry.leadIn or entry.summary %}
    <div class="mt-4 text-xl leading-8 tw-only">{{ entry.leadIn ? entry.leadIn : entry.summary }}</div>
  {% endif %}
{% endblock %}

{% block content %}
  <div>
    <ul class="flex flex-wrap list-none m-0 p-0">
        <li><a href="?type=upcoming&q={{ query }}&year={{ year }}&month={{ month }}" class="button m-0 rounded-none {{ type == 'upcoming' ? 'pointer-events-none' : 'secondary' }}">Upcoming Meetings</a></li>
        <li><a href="?type=past&q={{ query }}&year={{ year }}&month={{ month }}" class="button m-0 rounded-none {{ type == 'past' ? 'pointer-events-none' : 'secondary' }}">Past Meetings</a></li>
    </ul>
  </div>

  {% if filter_enabled %}
    {% if meetings|length %}
      <h2 aria-live="polite">Displaying {{ meetings|length }} of {{ pageInfo.total }} Meetings</h2>
    {% else %}
      <h2 aria-live="polite">No results found</h2>
    {% endif %}
  {% else %}
    {% switch type %}
      {% case 'upcoming' %}
      <h2>Displaying all Upcoming Meetings</h2>
      {% case 'past' %}
    <h2 aria-live="polite">Displaying All Meetings</h2>
    {% endswitch %}
  {% endif %}

  <div class="mt-8">
    {% if meetings|length %}
      {% for meeting in meetings %}
        {% include '_components/_meeting' %}
      {% endfor %}
    {% else %}
      <div class="px-8 pt-3 pb-5" style="background:#F7F7F7;">
        <p>Please try another search or updating your filters.</p>
        {% if type == 'past' %}
          <p><a href="?type=past">See all Past Meetings</a></p>
        {% elseif type == 'upcoming' %}
          <p><a href="?type=upcoming">See all Upcoming Meetings</a></p>
        {% endif %}
      </div>
    {% endif %}
  </div>
  <div class="my-8">
    {% include '_partials/_elements/_pagination' %}
  </div>
{% endblock %}

{% block sidebar %}
  <hr/>
  <h4 class="py-0 mt-4 mb-6">{{ 'Search & Filter'|t }}</h4>
  <form action="{{ entry.url }}/meetings">
    <input type="hidden" name="type" value="{{ type }}"/>
    {{ macros.select('Month', 'month', 'month', [
        {"01"  : "January"},
        {"02"  : "February"},
        {"03"  : "March"},
        {"04"  : "April"},
        {"05"  : "May"},
        {"06"  : "June"},
        {"07"  : "July"},
        {"08"  : "August"},
        {"09"  : "September"},
        {"10"  : "October"},
        {"11"  : "November"},
        {"12"  : "December"}
      ], "Select a month"
    )}}
    {% set earliest_year = craft.entries().section('meetings').order('date asc').limit(1).one().date|date('Y') %}
    {% set latest_year   = craft.entries().section('meetings').order('date desc').limit(1).one().date|date('Y') %}
    {% set years = [] %}
    {% for year in range(latest_year, earliest_year) %}
      {% set years =  years|merge([{(year): year}]) %}
    {% endfor %}

    {{ macros.select('Year', 'year', 'year', years, "Select a year") }}
    {{ macros.textInput('Search', 'search', 'q', 'Search agenda items and documents') }}

    {{ macros.select('Subcommittee', 'subcommittee', 'subcommittee', entry.subcommittees.all()|map(body=>{(body.id): body.title}), 'Select a Subcommittee') }}
    <div class="flex items-center">
      <button class="button medium">Apply</button>
      <a class="mt-4" href="{{ entry.url }}/meetings?type={{type}}">Clear filters</a>
    </div>
  </form>
  <hr class="light"/>
{% endblock %}