{% if slug is defined %}
  {% set entry = craft.entries().section('boardsCommissions').slug(slug).one() %}
  {% if not entry.indexToggle  %}
    {% redirect 404 %}
  {% endif %}
{% else %}
  {% redirect 404 %}
{% endif %}

{% set query          = craft.app.request.getQueryParam('q') %}
{% set meetings       = craft.entries().section('meetings').relatedTo(entry).search(query).limit(10) %}
{% set filter_enabled = false %}

{% if 
  craft.app.request.getQueryParam('start_date') or 
  craft.app.request.getQueryParam('end_date') or 
  craft.app.request.getQueryParam('type') or
  craft.app.request.getQueryParam('q') %}
  {% set filter_enabled = true %}
{% endif %}

{% set meetings = meetings|applyDateFilter('date', 2) %}

{% paginate meetings as pageInfo, meetings %}

{% if pageInfo.currentPage > 1 %}
  {% set filter_enabled = true %}
{% endif %}

{% set layout = 'reverse' %}
{% extends '_content.twig' %}
{% import '_macros/_macros' as macros %}

{% block content %}
  <div>
    <ul class="flex flex-wrap list-none m-0 p-0">
        <li><a href="?type=1" class="button m-0 rounded-none {{ type == 1 ? 'pointer-events-none' : 'secondary' }}">Upcoming Meetings</a></li>
        <li><a href="?type=2" class="button m-0 rounded-none {{ type == 2 ? 'pointer-events-none' : 'secondary' }}">Past Meetings</a></li>
    </ul>
  </div>

  {% if filter_enabled %}
    {% if meetings|length %}
      <h3>Displaying {{ meetings|length }} of {{ pageInfo.total }} Meetings</h3>
    {% else %}
      <h3>No results found</h3>
    {% endif %}
  {% else %}
    {% switch type %}
      {% case 1 %}
      <h3>Displaying all Upcoming Meetings</h3>
      {% case 2 %}
      <h3>Displaying all Past Meetings</h3>
    {% endswitch %}
  {% endif %}

  <div class="mt-8">
    {% if meetings|length %}
      {% for meeting in meetings %}
        {% include '_components/_meeting' %}
      {% endfor %}
    {% else %}
      <div class="px-8 pt-3 pb-5" style="background:#F7F7F7;">
        <p>Please try another search or updating your filters.</p>
        <p><a href="?">See Upcoming Meetings</a></p>
      </div>
    {% endif %}
  </div>
  <div class="my-8">
    {% include '_partials/_elements/_pagination' %}
  </div>
{% endblock %}

