<section class="{{ class is defined ? class }}" style="background-color:{{ background is defined ? background }}">
  <div class="container py-16 mx-auto">
    <h2>{{ heading is defined ? heading }}</h2>
    {% if content is defined %}<div class="mt-5">{{ content }}</div>{% endif %}
    {% include '_components/partials/_cards-grid' with { entries: entries, shadow: (shadow is defined and shadow) } %}
    {% if button_url is defined and button_label is defined %}
      <a href="{{ button_url }}" class="mt-8 button">{{ button_label }}</a>
    {% endif %}
  </div>
</section>