{% if block.getDescendants(1)|length %}
	<div class="accordion" data-allow-toggle>
	  <ul aria-label="Accordion Control Group Buttons" class="accordion-controls">
	  	{% for item in block.getDescendants(1) %}
	    <li class="accordion-item">
	      <button class="accordion-header" aria-controls="content-{{ block.id }}-{{ loop.index }}" aria-expanded="false" id="accordion-control-{{ block.id }}-{{ loop.index }}">{{ item.heading }} <span style="pointer-events: none;">{{ svg( '@webroot/assets/img/icon-plus.svg') }}{{ svg( '@webroot/assets/img/icon-minus.svg') }}</span></button>
	      <div class="accordion-panel" id="content-{{ block.id }}-{{ loop.index }}" hidden>
	        {% for block in item.getDescendants(1) %}
       			{% include '_components/_' ~ block.type %}
       		{% endfor %}
	      </div>
	    </li>
	    {% endfor %}
	  </ul>
	</div>
{% endif %}