<section id="iconCards" class="component flex-1 {{ block.background }}">
	<div class="container px-6 pt-10 pb-8">

		<h3 class="font-bold pb-6">{{ block.heading|default('Services') }}</h3>
		{{ block.description }}

		{% if block.iconCards|length %}
			<div class="items-stretch card-grid">

				{% set gridSize = "" %}
				{% if (block.iconCards|length == 2) or (block.iconCards|length == 4) %}
					{% set gridSize = "sm:w-1/2 md:w-1/2 lg:w-1/2" %}
				{% else %}
					{% set gridSize = "sm:w-1/2 md:w-1/2 lg:w-1/3" %}
				{% endif %}

				{% for iconCards in block.iconCards.all() %}
					{% set card = iconCards.card %}
					
					<a class="{{ gridSize }} mt-0 mb-6" href="{{ card.url }}" target="{{ card.target }}" style="margin-left:0;margin-right:0">
						<div class="p-6 text-lg font-bold h-full {{ block.cardBackgroundColor }} no-underline rounded-sm shadow-btn transition-all duration-75" style="margin:0 1rem">
							<i class="fal fa-{{ iconCards.icon }}" style="height:48px"></i>
							<{{ subheading }} class="my-0 text-lg pt-2">{{ card.text }}{% if card.target %} <i class="fas fa-external-link-alt pl-1" style="height:17px"></i>{% endif %}</{{ subheading }}>
							<p class="mt-3 mb-0 text-sm font-normal">{{ iconCards.description }}</p>
						</div>
					</a>
				{% endfor %}

			</div>
		{% endif %}

	</div>
</section>