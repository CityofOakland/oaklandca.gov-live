<section class="@container relative z-0 bg-cool-gray-100 p-6 {{ not loop.last ? "mb-12" }}">
  <div class="container px-6 @3xl:px-16">
    {{ include("_partials/_heading.twig", {
      params: {
        text: block.heading
      }
    }) }}
    <div class="flex flex-col space-y-6 md:space-y-0 md:space-x-8 md:flex-row md:items-stretch">
      {% for stat in block.stats.all() %}
        <div class="md:w-1/3">
          <div class="relative flex items-end mb-2">
            <img class="block w-20 h-auto mr-4" src="{{ stat.icon.one.url }}">
            <h3 class="text-lg md:text-xl lg:text-2xl">{{ stat.heading }}</h3>
         </div>
          <p class="my-0 text-sm italic md:text-base">{{ stat.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>