  params: {
    bgColor: bgColor ? bgColor.background,
    textColor: bgColor ? bgColor.text,
    brow: block.brow|default('Spotlight'),
    imgBg: block.useImageAsBackground ?? false,
    textRight: block.alignment ?? false,
    image: block.image.one() ?? null,
    heading: block.heading,
    description: block.description,
    button: block.callToAction ?? null
  }
}) }}