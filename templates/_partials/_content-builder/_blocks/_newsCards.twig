<section class="mb-12">
	<div class="container px-6 pt-10 pb-8 {{ block.background }}">
		<div class="px-2 sm:px-6 md:px-6 lg:px-6 pb-1">
			
			<h3 class="font-bold pb-6">{{ block.heading|default('News') }}</h3>

			<div class="flex flex-col lg:flex-row">

				{% if block.news|length %}
					{% for entry in block.news.all() %}
						
						{% if loop.first %}
						<div class="lg:w-1/2 mb-6 lg:mb-0 lg:pr-3">

							{# Replace first news entry with 'featured news entry' if selected #}
							{% if block.featured|length %}

									{% for entry in block.featured.all() %}
										<article class="overflow-hidden bg-white rounded shadow">
											<figure class="relative z-0 flex items-center justify-center w-full p-4 bg-gray-300" style="padding-bottom:42%">
												{% set photo = photo ?? entry.newsImage.one ?? '' %}
												{% if photo | length %}
													<img src="{{ photo.url }}" class="absolute inset-0 object-cover w-full h-full aspect-ratio" alt="{{ photo.altText ?? ''}}">
												{% else %}
													<div class="flex items-center justify-center h-full p-4 text-gray-500 opacity-75 fill-current md:p-8 lg:p-12 aspect-ratio">
														<svg class="h-full" xmlns="http://www.w3.org/2000/svg" x="0" y="0" version="1.1" viewBox="0 0 60 60" xml:space="preserve" fill="currentColor">
															<path d="M31 16H17v14h14V16zm-2 12H19V18h10v10zm23-12H36a1 1 0 1 0 0 2h16a1 1 0 1 0 0-2zm0 6H36a1 1 0 1 0 0 2h16a1 1 0 1 0 0-2zm0 6H36a1 1 0 1 0 0 2h16a1 1 0 1 0 0-2zm0 6H19a1 1 0 1 0 0 2h33a1 1 0 1 0 0-2zm-18 6H19a1 1 0 1 0 0 2h15a1 1 0 1 0 0-2zm0 6H19a1 1 0 1 0 0 2h15a1 1 0 1 0 0-2zm0 6H19a1 1 0 1 0 0 2h15a1 1 0 1 0 0-2zm5 2h14V40H39v14zm2-12h10v10H41V42z"></path>
															<path d="M59 13c0-.017-.009-.031-.01-.048V0H11v30H1v24c0 3.309 2.691 6 6 6h46a5.997 5.997 0 0 0 5.99-5.99V13.048c0-.017.01-.03.01-.048zM56.99 2v10H13V2h43.99zM3 54V32h8v22c0 2.206-1.794 4-4 4s-4-1.794-4-4zm50 4H11.47c.015-.018.026-.039.04-.057a5.96 5.96 0 0 0 .635-.873c.162-.27.305-.552.423-.848l.045-.123a5.94 5.94 0 0 0 .273-.95c.006-.03.008-.06.014-.09a6 6 0 0 0 .1-1.063V14h43.99v40.01c0 2.2-1.79 3.99-3.99 3.99z"></path>
															<path d="M47 4H23v6h24V4zm-2 4H25V6h20v2z"></path>
														</svg>
													</div>
												{% endif %}
											</figure>

											<div class="p-8">
												<div class="mb-2 text-sm text-gray-800 uppercase">{{ entry.postDate | date("M d, Y") }}</div>
												<h3 class="mt-4 mb-1 text-xl font-bold">
													<a href="{{ entry.url }}" style="line-height:1.3" class="line-clamp-3">{{ entry.title }}</a>
												</h3>
												<div class="text-sm text-gray-1000 line-clamp-4">
													{{ entry.summary }}
												</div>
											</div>
										</article>
									{% endfor %}

							{% else %}

								<article class="overflow-hidden bg-white rounded shadow">
									<figure class="relative z-0 flex items-center justify-center w-full p-4 bg-gray-300" style="padding-bottom:42%">
										{% set photo = photo ?? entry.newsImage.one ?? '' %}
										{% if photo | length %}
											<img src="{{ photo.url }}" class="absolute inset-0 object-cover w-full h-full aspect-ratio" alt="{{ photo.altText ?? ''}}">
										{% else %}
											<div class="flex items-center justify-center h-full p-4 text-gray-500 opacity-75 fill-current md:p-8 lg:p-12 aspect-ratio">
												<svg class="h-full" xmlns="http://www.w3.org/2000/svg" x="0" y="0" version="1.1" viewBox="0 0 60 60" xml:space="preserve" fill="currentColor">
													<path d="M31 16H17v14h14V16zm-2 12H19V18h10v10zm23-12H36a1 1 0 1 0 0 2h16a1 1 0 1 0 0-2zm0 6H36a1 1 0 1 0 0 2h16a1 1 0 1 0 0-2zm0 6H36a1 1 0 1 0 0 2h16a1 1 0 1 0 0-2zm0 6H19a1 1 0 1 0 0 2h33a1 1 0 1 0 0-2zm-18 6H19a1 1 0 1 0 0 2h15a1 1 0 1 0 0-2zm0 6H19a1 1 0 1 0 0 2h15a1 1 0 1 0 0-2zm0 6H19a1 1 0 1 0 0 2h15a1 1 0 1 0 0-2zm5 2h14V40H39v14zm2-12h10v10H41V42z"></path>
													<path d="M59 13c0-.017-.009-.031-.01-.048V0H11v30H1v24c0 3.309 2.691 6 6 6h46a5.997 5.997 0 0 0 5.99-5.99V13.048c0-.017.01-.03.01-.048zM56.99 2v10H13V2h43.99zM3 54V32h8v22c0 2.206-1.794 4-4 4s-4-1.794-4-4zm50 4H11.47c.015-.018.026-.039.04-.057a5.96 5.96 0 0 0 .635-.873c.162-.27.305-.552.423-.848l.045-.123a5.94 5.94 0 0 0 .273-.95c.006-.03.008-.06.014-.09a6 6 0 0 0 .1-1.063V14h43.99v40.01c0 2.2-1.79 3.99-3.99 3.99z"></path>
													<path d="M47 4H23v6h24V4zm-2 4H25V6h20v2z"></path>
												</svg>
											</div>
										{% endif %}
									</figure>

									<div class="p-8">
										<div class="mb-2 text-sm text-gray-800 uppercase">{{ entry.postDate | date("M d, Y") }}</div>
										<h3 class="mt-4 mb-1 text-xl font-bold">
											<a href="{{ entry.url }}" style="line-height:1.3" class="line-clamp-3">{{ entry.title }}</a>
										</h3>
										<div class="text-sm text-gray-1000 line-clamp-4">
											{{ entry.summary }}
										</div>
									</div>
								</article>

							{% endif %} {# // END - block.featured|length #}

						</div>
						{% endif %} {# // END - loop.first #}

						{% if loop.index  == 2 %}
							<div class="lg:w-1/2 lg:pl-3">
						{% endif %}

						{# -- Horizontal enteries #}
						{% if loop.index in [2, 3]  %}
							<article class="horizontal-card bg-white rounded shadow mb-6 justify-start">
								{% if entry.newsImage.one | length %}
									<figure class="z-0 bg-white" {% if entry.newsImage.one | length %}style="background:url({{ entry.newsImage.one.url }});background-size:cover"{% endif %}>
										<img src="{{ entry.newsImage.one.url }}" style="opacity:0">
									</figure>
								{% elseif icon is defined %}
									<figure class="relative z-0 flex items-center justify-center h-48 p-4 bg-gray-300 sm:h-64">
										<div class="h-full p-12 text-gray-500 opacity-75 fill-current">
											{{ svg('@webroot/dist/img/icon-' ~ icon ~ '.svg')|attr({
												class: 'h-full'
											})|raw }}
										</div>
									</figure>
								{% endif %}
								<div class="flex flex-col p-4">
									<div class="mb-2 text-sm text-gray-800 uppercase">{{ entry.postDate | date("M d, Y") }}</div>
									<h3 class="mt-0 text-md font-bold">
										<a href="{{ entry.url }}">{{ entry.title }}</a>
									</h3>
								</div>
							</article>
						{% endif %}

						{% if loop.last %}
								<a class="button text-sm secondary px-4 py-2 mt-0 mb-1 inline-flex" href="/news">
									See All News <i class="fa-regular fa-arrow-right mb-0"></i>
								</a>
							</div>
						{% endif %}

					{% endfor %}
				{% endif %}

				
			</div>


			




		</div>
	</div>
</section>