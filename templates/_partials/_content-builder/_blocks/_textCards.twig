<section class="mb-12">
	<div class="container px-6 pt-10 pb-8 {{ block.background }}">
		<div class="px-2 sm:px-6 md:px-6 lg:px-6 pb-1">

			<h3>{{ block.heading }}</h3>
			{{ block.description }}

			{% if block.textCards|length %}
				<div class="items-stretch card-grid">

					{% set gridSize = "" %}
					{% if (block.textCards|length == 2) or (block.textCards|length == 4) %}
						{% set gridSize = "sm:w-1/2 md:w-1/2 lg:w-1/2" %}
					{% else %}
						{% set gridSize = "sm:w-1/2 md:w-1/2 lg:w-1/3" %}
					{% endif %}

					{% for textCards in block.textCards.all() %}
						{% set card = textCards.card %}
						{% set linkType = card.typeHandle %}
						
						<a class="{{ gridSize }} mb-1" href="{{ card.url }}" target="{{ card.target }}" style="margin-left:0;margin-right:0">
							<div class="p-6 text-lg font-bold {{ textCards.background }} no-underline rounded-sm shadow-btn transition-all duration-75 h-full" style="margin:0 1rem">
                                <div class="uppercase font-normal text-sm mb-2">{{ textCards.brow }}</div>
								<{{ subheading }} class="my-0 text-lg md:text-xl font-bold {% if 'bg-white' in textCards.background.value %}text-green-800{% else %}text-white{% endif %}">{{ card.text }}</{{ subheading }}>
								<p class="mt-3 mb-0 text-sm font-normal">{{ textCards.description }}</p>
							</div>
						</a>
					{% endfor %}

				</div>
			{% endif %}

		</div>
	</div>
</section>