<section class="mb-12">
	<div class="container px-6 pt-10 pb-8 bg-yellow-100">
		<div class="px-2 sm:px-6 md:px-6 lg:px-6 pb-1">
			
			<h3>{{ block.heading|default('Services') }}</h3>
			{{ block.description }}

			{% if block.serviceCards|length %}
				<div class="items-stretch card-grid">

					{% set gridSize = "" %}
					{% if (block.serviceCards|length == 2) or (block.serviceCards|length == 4) %}
						{% set gridSize = "sm:w-1/2 md:w-1/2 lg:w-1/2" %}
					{% else %}
						{% set gridSize = "sm:w-1/2 md:w-1/2 lg:w-1/3" %}
					{% endif %}

					{% for serviceCards in block.serviceCards.all() %}
						{% set card = serviceCards.card %}
						{% set linkType = card.typeHandle %}
						
						<a class="{{ gridSize }} mb-1" href="{{ card.url }}" target="{{ card.target }}" style="margin-left:0;margin-right:0">
							<div class="p-6 text-lg font-bold text-gray-1000 no-underline bg-yellow-500 rounded-sm shadow-btn transition-all duration-75 hover:text-gray-900 hover:bg-yellow-600 h-full" style="margin:0 1rem">
								<{{ subheading }} class="my-0 text-lg md:text-xl">{{ card.text }}</{{ subheading }}>
								<p class="mt-3 mb-0 text-sm font-normal">{{ serviceCards.description }}</p>
							</div>
						</a>
					{% endfor %}

				</div>
			{% endif %}

		</div>
	</div>
</section>

