<article class="horizontal-card {% if loop is defined and not loop.last %} border-gray-300 border-b-2 {% endif %}">
  {% if photo | length %}
    <figure class="z-0 bg-white">
      <img src="{{ photo.url }}" class="">
    </figure>
  {% elseif icon is defined %}
    <figure class="relative z-0 flex h-48 items-center justify-center bg-gray-300 p-4 sm:h-64">
      <div class="h-full fill-current p-12 text-gray-500 opacity-75">
        {{ svg("@webroot/dist/img/icon-' ~ icon ~ '.svg")|attr({
          class: 'h-full'
        })|raw }}
      </div>
    </figure>
  {% endif %}
  <div class="flex flex-col justify-between">
    <div class="">
      <div class="my-3 text-base text-gray-500">{{ byline }}</div>
      <h3 class="mt-0 text-4xl">
        <a href="{{ url }}">{{ title }}</a>
      </h3>
      <p class="my-4 text-gray-1000">
        {{ body }}
      </p>
    </div>
    <div>
      <a href="{{ url }}">Read More Â»</a>
    </div>
  </div>
</article>
{% if currentUser %}<!-- End {{ _self }} -->{% endif %}
