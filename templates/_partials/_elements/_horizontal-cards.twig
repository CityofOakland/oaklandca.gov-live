<article class="horizontal-card {% if loop is defined and not loop.last %} border-gray-300 border-b-2 {% endif %}">
  {% if photo | length %}
    <figure class="bg-white z-0">
      <img src="{{ photo.url }}" class="">
    </figure>
  {% elseif icon is defined %}
    <figure class="h-48 sm:h-64 p-4 bg-gray-300 relative z-0 flex items-center justify-center">
      <div class="text-gray-500 opacity-75 fill-current h-full p-12">
        {{ craft.inlin.er('/assets/img/icon-' ~ icon ~ '.svg') | replace('<svg ', '<svg class="h-full" ') | raw }}
      </div>
    </figure>
  {% endif %}
  <div class="flex flex-col justify-between">
    <div class="">
      <div class="text-base text-gray-500 my-3">{{ byline }}</div>
      <h3 class="text-4xl mt-0">
        <a href="{{ url }}">{{ title }}</a>
      </h3>
      <p class="text-gray-1000 my-4">
        {{ body }}
      </p>
    </div>
    <div>
      <a href="{{ url }}">Read More Â»</a>
    </div>
  </div>
</article>
