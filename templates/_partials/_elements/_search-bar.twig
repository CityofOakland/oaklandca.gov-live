{% set searchSegment = searchSegment ?? '' %}
<div class="bg-gray-300">
  <div class="container">
    <form action="{{ url('search/' ~ searchSegment) }}">
      <label for="keywords">Search by Keyword</label>
      <div class="flex flex-col mt-4 sm:flex-row">
        <input class="flex-1 px-8 py-4 mb-4 rounded-none appearance-none sm:mb-0" name="keywords" required type="search" value="">
        <button class="btn" type="submit">Search</button>
      </div>
    </form>
  </div>
</div>
