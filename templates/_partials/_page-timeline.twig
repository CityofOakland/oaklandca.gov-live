{% if currentUser %}<!-- Begin {{ _self }} -->{% endif %}
{% if entry.timeline.exists() %}
  <section class="mb-16">
    <a class="anchor-link" id="page-timeline"></a>
    {{ include("_partials/_heading.twig", {
      params: {
        text: headerText ?? "Timeline",
        margin: "mb-4"
      }
    }) }}
    <dl class="timeline-grid">
      {% for block in entry.timeline.all() %}
        <dt>{{ block.milestoneName }}</dt>
        <dd>{{ block.milestoneDates }}</dd>
      {% endfor %}
    </dl>
  </section>
{% endif %}
{% if currentUser %}<!-- End {{ _self }} -->{% endif %}