{% if block.buttons|length %}
  <div class="flex flex-wrap -mx-4">
    {% for button in block.buttons.all() %}
      {% switch button.buttonWidth %}
        {% case '1/3' %}
          {% set class = 'w-full md:w-1/3 px-4' %}
        {% case '1/2' %}
          {% set class = 'w-full md:w-1/2 px-4' %}
        {% default %}
          {% set class = 'w-full md:w-1/3 px-4' %}
      {% endswitch %}

      {% switch button.buttonColor %}
        {% case 'default' %}
          {% set buttonClass = 'block p-8 py-5 text-lg font-bold text-green-800 no-underline bg-white border-l-4 border-green-600 rounded-sm text-gray-1000 shadow-btn transition-all duration-75 hover:text-white hover:underline hover:bg-green-1000' %}
        {% case 'green' %}
          {% set buttonClass = 'block p-8 py-5 text-lg font-bold text-white no-underline bg-green-800 rounded-sm shadow-none transition-all duration-75 hover:text-white hover:underline hover:bg-green-1000' %}
        {% default %}
          {% set buttonClass = 'block p-8 py-5 text-lg font-bold text-green-800 no-underline bg-white border-l-4 border-green-600 rounded-sm text-gray-1000 shadow-btn transition-all duration-75 hover:text-white hover:underline hover:bg-green-1000' %}
      {% endswitch %}

      {% switch button.type %}
        {% case 'entry' %}
          {% if button.entry|length %}
          <div class="{{ class }} mb-4">
            <a href="{{ button.entry.one().url }}" class="{{ buttonClass }}">
              {% if button.buttonIcon|length %}
                <img src="{{ button.buttonIcon.one().url }}" alt="{{ button.buttonIcon.one().altText }}" class="inline w-auto h-6 mr-4"/>
              {% endif %}
              {{ button.entry.one().title }}
            </a>
          </div>
          {% endif %}
        {% case 'manual' %}
          <div class="{{ class }} mb-4">
            <a href="{{ button.href }}" class="{{ buttonClass }}">
              {% if button.buttonIcon|length %}
                <img src="{{ button.buttonIcon.one().url }}" alt="{{ button.buttonIcon.one().altText }}" class="inline w-auto h-6 mr-4"/>
              {% endif %}
              {{ button.label }}
            </a>
          </div>
        {% default %}
      {% endswitch %}
    {% endfor %}
  </div>
{% endif %}