{% switch block.children|length %}
  {% case 3 %}
    {% set class = 'px-4 md:w-1/3' %}
  {% case 2 %}
    {% set class = 'px-4 md:w-1/2' %}
  {% default %}
{% endswitch %}

<div class="flex-wrap -mx-4 md:flex">
  {% for column in block.getDescendants(1) %}
    <div class="{{ class }}">
      {% for item in column.children %}
        {% switch item.type %}
          {% case 'heading' %}
            <h2 class="mt-0 mb-4 text-2xl sm:leading-none sm:flex-1 sm:text-3xl">{{ item.heading }}</h2>
          {% case 'mainContent' %}
            <div class="content body-text">
              {{ item.mainContent }}
            </div>
          {% default %}
        {% endswitch %}
      {% endfor %}
    </div>
  {% endfor %}
</div>