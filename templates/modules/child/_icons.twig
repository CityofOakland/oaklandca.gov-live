{% if currentUser %}<!-- Begin {{ _self }} -->{% endif %}
{% if block.icons|length %}
  <ol class="flex-row text-center md:flex">
    {% for icon in block.icons.all() %}
      <li class="how-it-works-block md-px-24">
        <figure class="mb-2 flex h-12 items-center justify-center">
          {% if icon.icon|length %}
            <img src="{{ icon.icon.one().url }}" alt="{{ icon.icon.one().altText }}" class="h-auto w-12">
          {% endif %}
        </figure>
        <h3 class="mb-2 text-base font-semibold md:text-xl">{{ icon.heading }}</h3>
        <p class="my-0 text-sm md:px-2 md:text-lg lg:px-8">{{ icon.subheading }}</p>
      </li>
    {% endfor %}
  </ol>
{% endif %}
{% if currentUser %}<!-- End {{ _self }} -->{% endif %}
