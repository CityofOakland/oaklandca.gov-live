{% set meetings = craft.entries().section('meetings').limit(-1) %}
<?xml version="1.0" encoding="UTF-8"?>
<entries>
	{% for meeting in meetings %}
		<item>
			<meetingId>{{ meeting.id  }}</meetingId>
			<relatedSubBody>
			{% for relationship in ['departments', 'projects', 'topics'] %}
				{% for item in meeting[relationship].all() %}
					<item>{{ item.id }}</item>
				{% endfor %}
			{% endfor %}
			</relatedSubBody>
		</item>
	{% endfor %}
</entries>